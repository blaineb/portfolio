
doctype html
head
  if environment == "production" || environment == "development"
    if environment == "production"
      //- github pages (production) need the base url to be the
      //- path of the project repo
      base(href="/blaineb/portfolio/")
      base(src="/blaineb/portfolio/")
    if environment == "development"
      //- local dev environment (development) needs the base url
      //- to be a slash (for harp server)
      base(href="/")
      base(src="/")
  else
    base(href="#{environment}")
    base(src="#{environment}")

  // Basics
  meta(charset='utf-8')
  title Blaine Billingsley &mdash; Interaction Designer
  meta(name='description', content='')
  meta(name='author', content='')

  // Mobile
  meta(name='viewport', content='width=device-width, initial-scale=1')

  // CSS
  link(rel='stylesheet', href='css/normalize.css')
  link(rel='stylesheet', href='css/billingsley.css')

  // Favicon
  link(rel='icon', type='image/png', href='/images/favicon.png')

  body
    h1 #{environment}
    .wrapper
      != yield
    // This comment is just to fix syntax highlighting.
  
  section#footer
    .row.centered
      .six.columns.offset-by-three.centered
        //- h3 Elsewhere
        .social-links.pd-b-md
          //- li: a(href="//www.twitter.com/blaineranium" target="_blank") Twitter
          //- li: a(href="//www.facebook.com/blainebillingsley" target="_blank") Facebook
          a(href="//www.bandcamp.com/blainebillingsley" target="_blank").ic.bandcamp Bandcamp
          a(href="//www.dribbble.com/blaineranium" target="_blank").ic.dribbble Dribbble
          a(href="//www.youtube.com/blainebillingsley" target="_blank").ic.youtube Youtube
          a(href="//www.twitter.com/blaineb" target="_blank").ic.github Github
          //- li: a(href="#" target="_blank" data=) Linkedin
        .email-me
          h3: a(href="mailto:blainebillingsley@gmail.com") blainebillingsley&#x40;gmail.com


  
  script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js")
