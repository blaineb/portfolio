
doctype html
head
  if environment == "production" || environment == "development"
    if environment == "production"
      //- github pages (production) need the base url to be the
      //- path of the project repo
      base(href="/")
      base(src="/")
    if environment == "development"
      //- local dev environment (development) needs the base url
      //- to be a slash (for harp server)
      base(href="/")
      base(src="/")
  else
    base(href="#{environment}")
    base(src="#{environment}")

  // Basics
  meta(charset='utf-8')
