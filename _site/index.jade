section#hi.section.hero-text
	
	//- img#portrait(src="images/portrait-test.png")
	.row.align-items-center.centered
		div#intro.six.columns
			.square
			h1 Blaine Billingsley
			h4 I am an experience designer in Oakland, CA
			
	
section#works.section
	//- .section-header: h6 Work
	.row.grid
		for work, slug in public.work._data
			if !work.coming_soon 
				article.article.one-half.column
					a(style="background-color: #{work.bg};" class="thumbnail-wrapper thumbnail-#{ slug }" href="work/#{ slug }")
						img(class="thumbnail" src="images/thumbnails/#{ slug }.png")
						//- img(class="logo" src="/images/thumbnails/#{ slug }_logo.png")
					h3: a(href="work/#{ slug }")= work.title
					p= work.tagline
					//- p.roles= work.roles
section#music.pd-b-xl
	.section-header.pd-b-xl: h6 Music
	.row
		for music in public.music._data
			a.one-third.column.image-links(href="#{music.url}" target="_blank")
				img(class="album-cover" src="#{music.image}")
				.image-link-text
					h3= music.title
					p= music.tagline
section#around-the-web.pd-b-xl
	.section-header.pd-b-xl: h6 Around the web
	.row.justify-left
		.four.columns
			a(href="//www.dougarobinson.com/blaine-billingsley/" target="blank")
				h3 Life of Wonder Ep. 01: Never Forget Your Beginner's Spirit
				p.pd-b-sm A podcast exploring creativity by Doug Robinson
			p.caption I am interviewed at length about design, Marxism, music and the avant-garde
		.four.columns.m-l-one-column
			a(href="//www.lightscameronjackson.com" target="blank")
				h3 Lights Cameron Jackson
				p.pd-b-sm A film project by Dave King of The Bad Plus
			p.caption I play "Steve Brave" and co-composed the score



